---
import DarkModeSwitcher from "../ui/component/common/DarkModeSwitcher.vue";
import RegisterComponent from '../security/presentation/component/RegisterComponent.vue';
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Push</title>
</head>
<body>
<section class="bg-gray-50 dark:bg-gray-900">
    <DarkModeSwitcher client:load class="absolute top-0 right-0 mt-8 mr-8" />
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
            Pushit
        </a>
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <RegisterComponent class="space-y-4 md:space-y-6" client:load />
                <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                    Already have an account? <a href="/login" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login here</a>
                </p>
            </div>
        </div>
    </div>
</section>
</body>